<%= form_tag new_ticket_path do |form| %>
  <div class="field">
    <h2>Routes</h2>
  </div>
  <div class="field">
    <% @routes.each do |route| %>
      <h3><%= route.first.name %></h3>
      <% unless route.first.railway_stations.asc.first.departure_time(route).nil? %>
    <h4><%=  route.first.railway_stations.asc.first.departure_time(route).strftime("%m-%d %H:%M")  %>(departure)</h4>
    <h4><%= route.first.railway_stations.asc.last.arrival_time(route).strftime("%m-%d %H:%M") %>(arrival)</h4>
      <% end %>
        <table>
        <thead>
        <tr>
          <th>Train</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <div class="field">
          <%= label_tag :train_id, 'Choose train' %>
          <%= collection_select route.first, :train_id, route.first.trains, :id, :number %>
        </div>
        <% route.first.trains.each do |train|%>
          <tr>
            <td><p><%= train.number %></p></td>
            <td>
              <div class="actions">
                <%= label_tag  %>
                <%= link_to 'Buy ticket',  tickets_path, train: train.id %>
              </div>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    <% end %>
  </div>
<% end %>