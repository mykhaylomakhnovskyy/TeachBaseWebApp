<%= form_tag show_ticket_search_path, method: :get do%>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :surname %>
    <%= text_field_tag :surname %>
  </div>
  <div class="field">
    <%= label_tag :passport_id %>
    <%= text_field_tag :passport_id %>
  </div>
  <%= submit_tag 'Buy' %>
<% end %>
