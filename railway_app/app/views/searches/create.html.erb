<%= form_tag buy_ticket_search_path, method: :patch do %>
  <div class="field">
    <h2>Routes</h2>
  </div>
  <div class="field">
    <% @routes.each do |route| %>
      <h3><%= route.first.name %></h3>
      <h4><%= route.first.railway_stations.asc.first.departure_time(route).strftime("%m-%d %H:%M") %>(departure)</h4>
      <h4><%= route.first.railway_stations.asc.last.arrival_time(route).strftime("%m-%d %H:%M") %>(arrival)</h4>
      <table>
        <thead>
        <tr>
          <th>Train</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
          <% route.first.trains.each do |train|%>
          <tr>
            <td><p><%= train.number %></p></td>
            <td>
              <div class="actions">
                <%= submit_tag 'Buy ticket' %>
              </div>
            </td>
          </tr>
          <% end %>

        </tbody>
      </table>
    <% end %>
  </div>
<% end %>